<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:showDividers="middle|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1">

                <Button
                    android:id="@+id/boton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/brigantia"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/oliXiraldez"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/silvereira"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/spacioBInteriorismo"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/rosamendez"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/macala"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/tresOficios"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/arteCelta"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/alala"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/iagoSalgado"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="@string/pabloSeoane"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

                <Button
                    android:id="@+id/boton12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp"
                    android:text="Olga MartÃ­nez"
                    android:textColor="#94bb32"
                    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                    app:rippleColor="#94bb32"
                    app:strokeColor="#94bb32" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:fontFamily="monospace"
        android:text="@string/artesania"
        android:textAlignment="center"
        android:textColor="#2a4f31"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/logoTeo"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/concelloteo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageButton
                android:id="@+id/botonFacebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/facebookanima"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/facebook"
                app:tint="#00FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/botonTwitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/animatwitter"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/twitter"
                app:tint="#00FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/botonInstagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/animainstagram"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/instagram"
                app:tint="#00FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/informacionBoton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/animainformacion"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/logoinformacion"
                app:tint="#00FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


